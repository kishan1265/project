        <style type="text/css">
            body {
                background: #f7f7ff;
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid transparent;
                border-radius: .25rem;
                margin-bottom: 1.5rem;
                box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
            }

            .me-2 {
                margin-right: .5rem !important;
            }
        </style>
        <!-- </head> -->

        <body>
            <div class="container" style="margin-top: 5%;">
                <div class="main-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                            class="rounded-circle" width="150">
                                        <div class="mt-3">
                                            <h4 class="text-dark"><%- user.name %></h4>
                                            <p class="text-secondary mb-1">Full Stack Developer</p>
                                            <p class="text-dark font-size-sm"><%- user.address %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-body">
                                    <form action="/edit_profile" method="POST">
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="name" id="name" name="name" class="form-control"
                                                    value="<%- user.name %>" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="email" id="email" name="email" class="form-control"
                                                    value="<%- user.email %>" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Programe</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <!-- <input type="text" class="form-control" value="(239) 816-9029"> -->
                                                <select class="form-control" id="exampleSelect1" name="programe"
                                                    required>
                                                    <option value="">Select Program</option>
                                                    <option value="B.Tech - ICT">B.Tech - ICT</option>
                                                    <option value="B.Tech - ICT (CS)">B.Tech - ICT (CS)</option>
                                                    <option value="B.Tech - MNC">B.Tech - MNC</option>
                                                    <option value="MscIT">MscIT</option>
                                                    <option value="M.Tech - ML">M.Tech - ML</option>
                                                    <option value="M.Tech - Data Science">M.Tech - Data Science</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Batch Year</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <select class="form-control" id="exampleSelect2" name="batch" required>
                                                    <option value="">Select Year</option>
                                                    <option value="1st Year">1st Year</option>
                                                    <option value="2nd Year">2nd Year</option>
                                                    <option value="3rd Year">3rd Year</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Codeforces Profile</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="cfprofile" id="cfprofile" name="cfprofile"
                                                    class="form-control" value="<%- user.cfprofile %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 text-dark">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="address" id="address" name="address" class="form-control"
                                                    value="<%- user.address %>">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                                <button type="submit" class="btn btn-primary px-4">
                                                    Save Changes
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </body>



