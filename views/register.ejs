<body class="bg-light">
  
  <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Register
          </h1>
          <%- include ("./partials/messages") %>
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="name"
                id="name" 
                name="name"
                class="form-control"
                placeholder="Enter Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="exampleSelect1">Program</label>
              <select class="form-control" id="exampleSelect1" name="programe">
                <option value="0">Select Program</option>
                <option value="B.Tech - ICT">B.Tech - ICT</option>
                <option value="B.Tech - ICT (CS)">B.Tech - ICT (CS)</option>
                <option value="B.Tech - MNC">B.Tech - MNC</option>
                <option value="MscIT">MscIT</option>
                <option value="M.Tech - ML">M.Tech - ML</option>
                <option value="M.Tech - Data Science">M.Tech - Data Science</option>
              </select>
            </div>
            <div class="form-group">
              <label for="exampleSelect1">Batch Year</label>
              <select class="form-control" id="exampleSelect1" name="batch">
                <option value="0">Select Year</option>
                <option value="1st Year">1st Year</option>
                <option value="2nd Year">2nd Year</option>
                <option value="3rd Year">3rd Year</option>
                <option value="4rd Year">4rd Year</option>
              </select>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <button type="submit" class="btn btn-success btn-block">
              Register
            </button>
          </form>
          <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </div>
      </div>
    </div>
</body>
  