<body class="bg-light">
  
  <%- include('includes/admin_navbar.ejs') %>
  
  <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">
            Edit Event
          </h1>
          <%- include ("./partials/messages") %>
          <form action="/admin/edit_event/<%= id %>" method="POST">
            <div class="form-group">
              <label for="name">Event Name</label>
              <input
                type="name"
                id="name" 
                name="name"
                class="form-control"
                placeholder="Enter Event Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="date">Date</label>
              <input
                type="datetime-local"
                id="date"
                name="date"
                class="form-control"
                placeholder="Enter Date"
                value="<%= typeof date != 'undefined' ? date : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="hour">Event Duration</label>
              <input
                type="number"
                id="duration" 
                name="duration"
                class="form-control"
                placeholder="Enter Duration"
                value="<%= typeof duration != 'undefined' ? duration : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="venue">Event Venue</label>
              <input
                type="name"
                id="venue" 
                name="venue"
                class="form-control"
                placeholder="Enter Venue"
                value="<%= typeof venue != 'undefined' ? venue : '' %>"
              />
            </div>
            <div>
              <label for="description">Description</label>
              <textarea
                type="text"
                id="description"
                name="description"
                class="form-control"
                placeholder="Enter description"
                value="<%= typeof description != 'undefined' ? description : '' %>"
              ><%= description %></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-block mt-4">
              Edit Event
            </button>
          </form>
        </div>
      </div>
    </div>
    
</body>