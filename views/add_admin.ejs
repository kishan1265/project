<body class="bg-light">
  <%- include('includes/admin_navbar.ejs') %>
  
  <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">Add Admin</h1>
          <%- include ("./partials/messages") %>
          <form action="/admin/add_admin" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
              />
            </div>
            <button type="submit" class="btn btn-success btn-block">Add Admin</button>
          </form>
        </div>
      </div>
    </div>
</body>
  