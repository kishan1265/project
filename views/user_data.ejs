<body class="bg-light">
  
    <%- include('includes/admin_navbar.ejs') %>
    
    </div>
    <div class="table_container">
        <% if(!user_data){ %>
            <h1 style="font-size: 3vw;">No User Register till Now.</h1>
        <% } %>
        <% if(user_data){ %>
            <div class="text-primary mb-2" style="width: 100%; text-align: center;"><h1>Register User</h1></div>
                <table class="table table-dark table-hover">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">programme</th>
                        <th scope="col">batch</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% user_data.forEach(function (reg_user,index) { %>
                    <tr class="table-primary" id="<%= reg_user._id %>">
                        <th scope="row"> <%= reg_user.email.substr(0,9) %></th>
                        <td><%= reg_user.name %></td>
                        <td><%= reg_user.programe %></td>
                        <td><%= reg_user.batch %></td>
                        <td><button class="btn btn-danger btn-sm rounded-0" id="<%= reg_user._id %>" key = "<%= reg_user._id %>" type="button" data-toggle="tooltip" data-placement="top" title="Delete" onclick="delete_user(this.id)"><i class="fa fa-trash"></i></button></td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
    
</body>

