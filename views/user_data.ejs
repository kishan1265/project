<script>
    function delete_user(id) {

        const user_id = id;

        const data = {
            user_id: user_id
        }

        fetch(`/admin/delete_user`, {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        });

        alert("User deleted Success");
        const element = document.getElementById(user_id);
        element.remove();
    }

</script>